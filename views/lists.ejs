<%- include("header") -%>

    <!-- This is a marker consisting of a variable whose value gets changed according to the code logic-->
    <div class="box" id="heading">
        <h1>
            <%= day %>
        </h1>
    </div>

    <div class="box">
        <!-- using EJS scriplet we printed every task in the newItem list line by line-->

        <% if(newListItems.length !==0) %>
            <% { %>
                <% newListItems.forEach( (ele)=>{ %>
                    <form action="/delete" method="post">
                        <div class="item">
                            <input type="checkbox" onChange="this.form.submit()" name="itemNote" value=<%=ele._id %>>
                            <p>
                                <%= ele.title %>
                            </p>
                        </div>
                        <input type="hidden" name="listName" value=<%= day %>></input>
                    </form>
                    <% }) %>
                        <% } %>


                            <form class="item" action="/" method="post">
                                <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
                                <button type="submit" name="button" value=<%=day %> >+</button>
                            </form>

    </div>

    <%- include("footer") -%>